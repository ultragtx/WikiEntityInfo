<table class="table table-striped">
    <thead>
        <tr>
            <th>Results</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><p>Total: <%= @current_pages.count%></p></td>
        </tr>
        <% @current_pages.each do |page| %>
            <tr>
                <td><a href='/<%= @current_lang %>/<%= @current_data_style %>/w/<%= page.title %>'><%= page.title %></a></td>
            </tr>
        <% end %>
    </tbody>
</table>
        