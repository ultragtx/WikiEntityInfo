<div class="tabbable" style="margin-bottom: 18px;">
    <ul class="nav nav-tabs">
        <% first = true%>
        <% @entities.each_with_index do |entity, index| %>
            <li <%= 'class="active"' if first %>><a href="#tab<%= index + 1%>" data-toggle="tab"><%= @langs[:"#{entity.lang}"] %></a><li>
            <% first = false%>
        <% end %>
    </ul>
    <div class="tab-content" style="padding-bottom: 9px; border-bottom: 1px solid #ddd;">
        <% first = true%>
        <% @entities.each_with_index do |entity, index| %>
            <div class="tab-pane <%= "active" if first %>" id="tab<%= index + 1%>">
                <% first = false%>
                
                <p><%= entity.name %> (<%= entity.infobox_type%>)</p>
                
                <% if entity.alias_names %>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Alias name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% entity.alias_names.each do |alias_name|%>
                            <tr>
                                <td><%= alias_name.name %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                <% end %>
            
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% entity.properties.each do |property|%>
                        <tr>
                            <td><%= property.key %></td>
                            <td><%= property.value %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
				
                <% if entity.categories %>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Categories</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% entity.categories.each do |category_name|%>
                            <tr>
                                <td><%= category_name.name %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                <% end %>
            </div>
        <% end %>
    </div>
</div>

